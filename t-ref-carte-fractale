<script>
  (function () {
    const sectors = document.querySelectorAll('.sector');
    const infoCode = document.getElementById('info-code');
    const infoTitle = document.getElementById('info-title');
    const infoSub = document.getElementById('info-sub');
    const infoList = document.getElementById('info-list');

    let lastCode = 'C1a';

    function setInfoFromSector(el) {
      const code = el.getAttribute('data-code');
      const title = el.getAttribute('data-title');
      const sub = el.getAttribute('data-sub');
      const points = el.getAttribute('data-points') || '';

      infoCode.textContent = code;
      infoTitle.textContent = title;
      infoSub.innerHTML = sub;

      infoList.innerHTML = '';
      if (points) {
        const li = document.createElement('li');
        li.innerHTML = points;
        infoList.appendChild(li);
      }

      sectors.forEach(s => s.querySelectorAll('.sector-a, .sector-b').forEach(() => {
        s.classList.remove('active-a', 'active-b');
      }));
      sectors.forEach(s => {
        const poly = s.querySelector('polygon');
        if (poly) poly.classList.remove('active');
      });

      const poly = el.querySelector('polygon');
      if (poly) poly.classList.add('active');

      lastCode = code;
    }

    sectors.forEach(el => {
      el.addEventListener('mouseenter', () => setInfoFromSector(el));
    });
  })();
</script>

